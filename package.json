{
  "name": "moonhare",
  "version": "1.0.2",
  "author": "Kavindu Santhusa",
  "license": "MIT",
  "description": "Beautiful, customizable, and powerful front-end CSS framework for developing responsive, mobile first projects on the web.",
  "homepage": "https://github.com/MoonHareLabs/MoonHare.CSS",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MoonHareLabs/MoonHare.CSS.git"
  },
  "bugs": {
    "url": "https://github.com/MoonHareLabs/MoonHare.CSS/issues"
  },
  "scripts": {
    "sass:watch": "node-sass src/scss:dist/css/ -w",
    "sass:build": "node-sass src/scss/ -o dist/css/ -r",
    "sass:build:docs": "node-sass src/scss/beautify.scss docs/css/beautify.css",
    "prefix": "postcss dist/css/*.css -r --use=autoprefixer --no-map",
    "gulp-css": "gulp css",
    "gulp-watch": "gulp watch"
  },
  "keywords": [
    "css",
    "sass",
    "mobile-first",
    "responsive",
    "front-end",
    "framework",
    "web"
  ],
  "private": false,
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "cssnano": "^4.1.10",
    "gulp": "^4.0.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "node-sass": "^4.14.0",
    "postcss-cli": "^7.1.1"
  },
  "dependencies": {},
  "style": "dist/css/moonhare.css",
  "sass": "src/scss/moonhare.scss"
}
